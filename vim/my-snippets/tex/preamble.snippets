		\\huge{$6}
	\\end{center}

	\\begin{PuzzleClues}{\\textbf{$7}}
		\Clue{\\textbf{num}}{sol}{clue}
	\\end{PuzzleClues}
	\\begin{PuzzleClues}{\\textbf{$8}}
